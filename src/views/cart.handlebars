<div class="d-flex row justify-content-center">
  <div class="mt-3">
    <h1>Cart</h1>
    <div
      class="d-flex flex-wrap justify-content-around mt-4"
    >
      {{#if status}}
      <div>
        {{#each list}}
        <div class="d-flex m-5">
          <div class="card card-product" value="{{this.product._id}}" style="width: 18rem;">
            <img
              class="card-img-top"
              src="/static/img/{{this.product.thumbnail}}"
              alt="{{this.product.title}}"
            />
            <div class="card-body">
              <h3 class="card-title">{{this.product.title}}</h3>
              <h5 class="card-title">${{this.product.price}} per product</h5>
              <p class="card-text">{{this.amount}}</p>
              <button class="btn btn-danger" type="button" onclick=removeFromCart("{{this.product._id}}")>X</button>
            </div>
          </div>
            </div>
        {{/each}}
            <div class="m-5">
              <button class="btn btn-success"  onclick=checkOut("{{this.cid}}")>CheckOut</button>
            </div>
        </div>
      {{else}}
      <div class="d-flex row align-items-center">
        <h2>{{data}}</h2>
        <div>
        <a class="btn btn-success" role="button" href="/products">Go shopping</a>
        </div>
      </div>
      {{/if}}
    </div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/static/js/cart.js"></script>



