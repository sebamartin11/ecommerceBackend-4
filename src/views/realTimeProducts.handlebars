<div class="d-flex row justify-content-center">
  
  <div>
  <div class="btn-group dropright">
  <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Profile
  </button>
  <div class="dropdown-menu">
    <div class="dropdown-item">Name: {{user.first_name}} {{user.last_name}} </div>
    <div class="dropdown-item">Age: {{user.age}}</div>
    <div class="dropdown-item">Email: {{user.email}} </div>
    <div class="dropdown-item">Role: {{user.role}}</div>
    <div><hr class="dropdown-divider"></div>
    <div class="dropdown-item text-center text-danger" onclick="return logout()">Log out</div>
  </div>
</div>
</div>

  <div class="mt-3">
    <h1>Products List</h1>
    <div
      class="d-flex flex-wrap justify-content-around mt-4" id="product-list-container">
      {{#if status}}
        {{#each list}}
          <div id="pid" value="{{this._id}}" class="d-flex card card-product mt-4" style="width: 18rem;">
            <img
              class="card-img-top"
              src="/static/img/{{this.thumbnail}}"
              alt="{{this.title}}"
            />
            <div class="card-body">
              <h3 class="card-title">{{this.title}}</h3>
              <h5 class="card-title">${{this.price}}</h5>
              <p class="card-text">{{this.description}}</p>
              
              {{#if stock}}
              <h5 class="card-text">Stock: {{this.stock}}</h5>
              <div class="d-flex row justify-content-center gap-3">
                <div class="col-5">
                <select id="selectedQuantity-{{this._id}}" class="form-select form-select-sm text-center" aria-label="Default select example">
                  <option selected>Select</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                </select>
                </div>
                <div>
                  <button
                    class="btn btn-success"
                    onclick=addToCart("{{this._id}}")
                    type="button"
                  >Add to Cart</button>
              </div>
              </div>
              {{else}}
                <button class="btn btn-secondary mt-5" disabled>Out of stock</button>
              {{/if}}
            </div>
          </div>
        {{/each}}
      {{else}}
        <h2>{{data}}</h2>
      {{/if}}
    </div>

  </div>

{{#if isAdmin}}
  <div class="card mt-5">
    <div class="mt-4">
      <h2>Add new product</h2>
      <h6>On real time</h6>
      <div class="d-flex justify-content-center column">
        <form
          id="newProductForm"
          enctype="multipart/form-data"
        >
          <div>
            <input
              class="form-control mb-2 col-2"
              type="text"
              placeholder="Title"
              name="title"
              required
            />
            <input
              class="form-control mb-2 col-2"
              type="text"
              placeholder="Description"
              name="description"
              required
            />
            <input
              class="form-control mb-2 col-2"
              type="text"
              placeholder="Code"
              name="code"
              required
            />
            <input
              class="form-control mb-2 col-2"
              type="number"
              placeholder="Price"
              name="price"
              required
            />
            <input
              class="form-control mb-2 col-2"
              type="number"
              placeholder="Stock"
              name="stock"
              required
            />
            <input
              class="form-control mb-2 col-2"
              type="text"
              placeholder="Category"
              name="category"
              required
            />
            <div>
              <input
                class="mt-2 form-control-sm form-control-file"
                type="file"
                name="thumbnail"
                id="thumbnail"
                required
              />
            </div>
          </div>
          <button
            class="m-4 btn btn-success"
            type="submit"
            value="Submit"
          >Submit</button>
        </form>
      </div>
    </div>
  </div>
  {{/if}}
</div>

